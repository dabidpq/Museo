@model Museo.Models.Arte

@{
    ViewData["Title"] = "Editar Obra";
}

<h1>Editar Obra</h1>
<h4>Arte</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

        
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre de la obra</label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

     
            <div class="form-group">
                <label class="control-label">Tipo</label>
                <div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Tipo" value="Escultura" id="tipoEscultura" required>
                        <label class="form-check-label" for="tipoEscultura">Escultura</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Tipo" value="Pintura" id="tipoPintura">
                        <label class="form-check-label" for="tipoPintura">Pintura</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Tipo" value="Reliquia" id="tipoReliquia">
                        <label class="form-check-label" for="tipoReliquia">Reliquia</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Tipo" value="Restauración" id="tipoRestauracion">
                        <label class="form-check-label" for="tipoRestauracion">Restauración</label>
                    </div>
                </div>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

       
            <div class="form-group">
                <label asp-for="Precio" class="control-label">Precio (dólares)</label>
                <input asp-for="Precio" class="form-control" type="number" step="0.01" min="0" required />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

         
            <div class="form-group">
                <label asp-for="Autor" class="control-label">Autor</label>
                <input asp-for="Autor" class="form-control" required />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>

       
            <div class="form-group">
                <label asp-for="Continente" class="control-label">Continente</label>
                <select asp-for="Continente" class="form-control" required>
                    <option value="">Seleccione un continente</option>
                    <option value="America">América</option>
                    <option value="Europa">Europa</option>
                    <option value="Asia">Asia</option>
                    <option value="Africa">África</option>
                    <option value="Oceania">Oceanía</option>
                    <option value="Antartida">Antártida</option>
                </select>
                <span asp-validation-for="Continente" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="Mantenimiento" />
                <label class="form-check-label" asp-for="Mantenimiento">Requiere mantenimiento</label>
            </div>

            <div class="form-group">
                <label asp-for="FechaRegistro" class="control-label">Fecha Registro</label>
                <input type="text" class="form-control"
                       value="@(Model.FechaRegistro == default(DateOnly) ? DateTime.Now.ToString("dd/MM/yyyy") : Model.FechaRegistro.ToString("dd/MM/yyyy"))"
                       readonly />
            </div>
 

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}